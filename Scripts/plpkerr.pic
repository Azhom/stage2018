##  Script piapp pour tracer les courbes P(k) avec les erreurs associees 
setaxesatt 'font=helvetica,bold,20 fixedfontsize minorticks'

# ./Objs/terrpk -k 100,0.005,0.255 -grid 200,200,100,8,8,8 -p 250 simlss.txt toto.ppf
delobjs *
openppf toto.ppf
rename toto nt
print nt
zone 1 2

nt2d nt k pk - pkerr - - 'marker=fcircle,7 red logx logy notit'
settitle '200x200x100 cells of 8^3 Mpc , 250 gals/cell ' ' ' 'font=helvetica,bold,18' 
nt2d nt k rap_pk - rap_pk_err - - 'marker=fcircle,7 red logx logy notit'
settitle '100 k-bins, delta-k=0.0025 Mpc^-1 ' ' ' 'font=helvetica,bold,18' 
w2ps

